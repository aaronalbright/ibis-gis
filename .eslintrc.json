{
    "parser": "@babel/eslint-parser",
    "env": {
        "es6": true,
        "node": true,
        "es2020": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "semi": [0, "always"],
        "no-unused-vars": "warn"
    }
}